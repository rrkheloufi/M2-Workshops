<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./head %>
</head>
<body class="container">

  <div class="jumbotron">
    <h1>Workshops</h1>
    <p>here is the list of workshop</p>
  </div>

  <a type="button" href="/workshop" class="btn btn-success btn-lg">Create new workshop</a>

  <ul class="list-unstyled"></ul>
  <%
  var btnNumber = 0;
  workshops.forEach(function(workshop) { %>
    <li class="media my-4">
      <div class="media-body">
        <h5 class="mt-0 mb-1"><%= workshop.name %></h5>
        <%= workshop.description %>
        <form action="/remove-workshop" method="post">
          <button id ="btn<%=btnNumber%>" type="submit" class="remove-btn btn btn-danger">Remove</button>
          <input hidden name="remove" value = "<%=btnNumber%>"/>
        </form>
        <form action="/update-workshop" method="get">
          <button id ="btn<%=btnNumber%>" type="submit" class="update-btn btn btn-warning">Update</button>
          <input hidden name="update" value = "<%=btnNumber%>"/>
        </form>
      </div>
    </li>
    <%
    btnNumber++;
  }); %>
</ul>

<footer>
  <% include ./footer %>
</footer>

</body>
</html>
